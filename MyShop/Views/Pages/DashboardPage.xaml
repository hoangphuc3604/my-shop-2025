<Page
    x:Class="MyShop.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowSpacing="0" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="20" Background="{ThemeResource SystemChromeLowColor}" x:Name="HeaderPanel">
            <TextBlock Text="Dashboard" Style="{StaticResource HeaderTextBlockStyle}" Margin="0,0,0,10"/>
            <TextBlock Text="Overview of sales, inventory, and business metrics" Style="{StaticResource SubtitleTextBlockStyle}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="20" Spacing="20">
                
                <!-- Loading Indicator -->
                <ProgressRing x:Name="LoadingProgressRing" IsActive="True" Width="40" Height="40" HorizontalAlignment="Center"/>

                <!-- Summary Cards -->
                <StackPanel Spacing="15" x:Name="SummaryPanel">
                    <TextBlock Text="Key Metrics" Style="{StaticResource SubheaderTextBlockStyle}"/>
                    
                    <Grid ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Padding="20" CornerRadius="8" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Total Products" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                <TextBlock x:Name="TotalProductsText" Text="0" FontSize="28" FontWeight="Bold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Padding="20" CornerRadius="8" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Today's Orders" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                <TextBlock x:Name="TodayOrdersText" Text="0" FontSize="28" FontWeight="Bold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Padding="20" CornerRadius="8" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Today's Revenue" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                <TextBlock x:Name="TodayRevenueText" Text="0 ₫" FontSize="24" FontWeight="Bold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Main Content Grid -->
                <Grid ColumnSpacing="20" RowSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Monthly Revenue Chart -->
                    <StackPanel Grid.Row="0" Spacing="15">
                        <TextBlock Text="Monthly Revenue Chart" Style="{StaticResource SubheaderTextBlockStyle}"/>
                        <Border Padding="20" CornerRadius="8" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}" Height="350">
                            <Grid>
                                <Canvas x:Name="MonthlyRevenueCanvas" Background="Transparent"/>
                                <TextBlock x:Name="NoDataMessageRevenue" Text="No data available" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondary}"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Recent Orders - Full Width with Better Visibility -->
                    <StackPanel Grid.Row="1" Spacing="15">
                        <TextBlock Text="Recent Orders" Style="{StaticResource SubheaderTextBlockStyle}"/>
                        <Border Padding="0" CornerRadius="8" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}" MinHeight="500">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <ListView x:Name="RecentOrdersList" SelectionMode="None" Padding="0" Margin="0"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>

                    <!-- Product Lists - Two Columns -->
                    <Grid Grid.Row="2" ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Top Selling Products -->
                        <StackPanel Grid.Column="0" Spacing="15">
                            <TextBlock Text="Top 5 Best Sellers" Style="{StaticResource SubheaderTextBlockStyle}"/>
                            <Border Padding="15" CornerRadius="8" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}" MinHeight="350">
                                <ListView x:Name="TopSellingProductsList" SelectionMode="None"/>
                            </Border>
                        </StackPanel>

                        <!-- Low Stock Products -->
                        <StackPanel Grid.Column="1" Spacing="15">
                            <TextBlock Text="Top 5 Low Stock Products (Stock &lt; 5)" Style="{StaticResource SubheaderTextBlockStyle}"/>
                            <Border Padding="15" CornerRadius="8" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderThickness="1" BorderBrush="{ThemeResource ControlElevationBorderBrush}" MinHeight="350">
                                <ListView x:Name="LowStockProductsList" SelectionMode="None"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Views.Pages.AddOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Back Button Header -->
        <Border
            Grid.Row="0"
            Padding="20,12,20,12"
            BorderThickness="0,0,0,1"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            Background="{ThemeResource SystemChromeLowColor}">
            <Button
                Content="← Back"
                Click="OnBackClicked"
                Style="{StaticResource TextBlockButtonStyle}"/>
        </Border>

        <!-- Page Title -->
        <Border
            Grid.Row="1"
            Padding="20,12,20,12"
            Background="{ThemeResource SystemChromeLowColor}">
            <TextBlock
                Text="Add Order"
                Style="{StaticResource HeaderTextBlockStyle}"/>
        </Border>

        <!-- Search Bar -->
        <Border
            Grid.Row="2"
            Padding="20,12,20,12"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderThickness="0,0,0,1"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}">
            <TextBox
                x:Name="SearchBox"
                PlaceholderText="Search products by name or SKU..."
                TextChanged="OnSearchTextChanged"
                Height="40"/>
        </Border>

        <!-- Products DataGrid -->
        <ScrollViewer
            Grid.Row="3"
            Margin="20,15,20,0"
            VerticalScrollBarVisibility="Auto">
            <Border
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                CornerRadius="4">
                <controls:DataGrid
                    x:Name="ProductsDataGrid"
                    AutoGenerateColumns="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="True"
                    GridLinesVisibility="All"
                    BorderThickness="0"
                    VerticalScrollBarVisibility="Hidden">

                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn
                            Header="SKU"
                            Binding="{Binding Product.Sku}"
                            Width="100"/>
                        <controls:DataGridTextColumn
                            Header="Product Name"
                            Binding="{Binding Product.Name}"
                            Width="250"/>
                        <controls:DataGridTextColumn
                            Header="Unit Price"
                            Binding="{Binding Product.ImportPrice, Converter={StaticResource PriceConverter}}"
                            Width="140"/>
                        <controls:DataGridTextColumn
                            Header="Available"
                            Binding="{Binding Product.Count}"
                            Width="100"/>
                        <controls:DataGridTemplateColumn
                            Header="Quantity"
                            Width="120">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <NumberBox
                                        Value="{Binding Quantity, Mode=TwoWay}"
                                        Minimum="0"
                                        Maximum="{Binding Product.Count}"
                                        SpinButtonPlacementMode="Hidden"
                                        ValueChanged="OnQuantityValueChanged"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                        <controls:DataGridTextColumn
                            Header="Total Price"
                            Binding="{Binding TotalPrice, Converter={StaticResource PriceConverter}}"
                            Width="140"/>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Border>
        </ScrollViewer>

        <!-- Summary and Actions Footer -->
        <Border
            Grid.Row="4"
            Padding="20"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            Margin="20,15,20,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Summary -->
                <StackPanel Spacing="8">
                    <TextBlock
                        x:Name="SelectedCountText"
                        Text="Products selected: 0"
                        FontSize="13"/>
                    <TextBlock
                        x:Name="TotalPriceText"
                        Text="Total Price: 0 ₫"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="10"
                    HorizontalAlignment="Right">
                    <Button
                        Content="Create Order"
                        Click="OnCreateOrderClicked"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Views.Pages.AddOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:PriceConverter x:Key="PriceConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:InverseCountToVisibilityConverter x:Key="InverseCountToVisibilityConverter"/>
        <converters:DiscountTypeToUnitConverter x:Key="DiscountTypeToUnitConverter"/>
    </Page.Resources>

    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Back Button Header -->
        <Border
            Grid.Row="0"
            Padding="20,12,20,12"
            BorderThickness="0,0,0,1"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            Background="{ThemeResource SystemChromeLowColor}">
            <Button
                Content="← Back"
                Click="OnBackClicked"
                Style="{StaticResource TextBlockButtonStyle}"/>
        </Border>

        <!-- Page Title -->
        <Border
            Grid.Row="1"
            Padding="20,12,20,12"
            Background="{ThemeResource SystemChromeLowColor}"
            x:Name="HeaderPanel">
            <TextBlock
                Text="Add Order"
                Style="{StaticResource HeaderTextBlockStyle}"/>
        </Border>

        <!-- Search Bar -->
        <Border
            Grid.Row="2"
            Padding="20,12,20,12"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderThickness="0,0,0,1"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            x:Name="TopPanel">
            <TextBox
                x:Name="SearchBox"
                PlaceholderText="Search products by name or SKU..."
                Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextChanged="OnSearchTextChanged"
                Height="40"/>
        </Border>

        <!-- Products DataGrid -->
        <ScrollViewer
            Grid.Row="3"
            Margin="20,15,20,0"
            VerticalScrollBarVisibility="Auto">
            <Border
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderThickness="1"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                CornerRadius="4">
                <controls:DataGrid
                    x:Name="ProductsDataGrid"
                    AutoGenerateColumns="False"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="True"
                    GridLinesVisibility="All"
                    BorderThickness="0"
                    VerticalScrollBarVisibility="Hidden">

                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn
                            Header="SKU"
                            Binding="{Binding Product.Sku}"
                            Width="100"/>
                        <controls:DataGridTextColumn
                            Header="Product Name"
                            Binding="{Binding Product.Name}"
                            Width="250"/>
                        <controls:DataGridTextColumn
                            Header="Unit Price"
                            Binding="{Binding Product.ImportPrice, Converter={StaticResource PriceConverter}}"
                            Width="140"/>
                        <controls:DataGridTextColumn
                            Header="Available"
                            Binding="{Binding Product.Count}"
                            Width="100"/>
                        <controls:DataGridTemplateColumn
                            Header="Quantity"
                            Width="120">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <NumberBox
                                        Value="{Binding Quantity, Mode=TwoWay}"
                                        Minimum="0"
                                        Maximum="{Binding Product.Count}"
                                        SpinButtonPlacementMode="Hidden"
                                        ValueChanged="OnQuantityValueChanged"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                        <controls:DataGridTextColumn
                            Header="Total Price"
                            Binding="{Binding TotalPrice, Converter={StaticResource PriceConverter}}"
                            Width="140"/>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Border>
        </ScrollViewer>

        <!-- Error Message -->
        <Border
            Grid.Row="4"
            Padding="20,10,20,0"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            Visibility="{Binding ErrorMessage, Converter={StaticResource CountToVisibilityConverter}}"
            Margin="20,15,20,0">
            <InfoBar
                Severity="Error"
                IsOpen="True"
                Message="{Binding ErrorMessage}"
                IsClosable="True"
                CloseButtonClick="OnErrorClosed"/>
        </Border>

        <!-- Summary and Actions Footer -->
        <Border
            Grid.Row="5"
            Padding="20"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            Margin="20,15,20,20"
            x:Name="SummaryPanel">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Summary -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="13">
                        <Run Text="Products selected: "/>
                        <Run Text="{Binding SelectedCount}" FontWeight="SemiBold"/>
                    </TextBlock>

                    <ComboBox
                        Header="Promotion Code (Optional)"
                        ItemsSource="{Binding AvailablePromotions}"
                        SelectedItem="{Binding SelectedPromotion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="Select a promotion (optional)"
                        Margin="0,8,0,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{Binding Code}" FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding DiscountType}" FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                        <TextBlock>
                                            <Run Text="-"/>
                                            <Run Text="{Binding DiscountValue}"/>
                                            <Run Text="{Binding DiscountType, Converter={StaticResource DiscountTypeToUnitConverter}}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock
                        FontSize="13"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="Subtotal: "/>
                        <Run Text="{Binding TotalPrice, Converter={StaticResource PriceConverter}}"/>
                    </TextBlock>

                    <TextBlock
                        FontSize="13"
                        Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                        Visibility="{Binding DiscountAmount, Converter={StaticResource CountToVisibilityConverter}}">
                        <Run Text="Discount: -"/>
                        <Run Text="{Binding DiscountAmount, Converter={StaticResource PriceConverter}}"/>
                    </TextBlock>

                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}">
                        <Run Text="Final Price: "/>
                        <Run Text="{Binding FinalPrice, Converter={StaticResource PriceConverter}}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="10"
                    HorizontalAlignment="Right"
                    x:Name="ButtonPanel">
                    <Button
                        Content="Create Order"
                        Click="OnCreateOrderClicked"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
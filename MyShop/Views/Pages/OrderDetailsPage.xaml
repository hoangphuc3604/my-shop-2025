<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShop.Views.Pages.OrderDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:PriceConverter x:Key="PriceConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:DiscountTypeToUnitConverter x:Key="DiscountTypeToUnitConverter"/>
        <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter"/>
        <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"/>
    </Page.Resources>

    <Grid RowSpacing="0" ColumnSpacing="0" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button Header -->
        <Border
            Grid.Row="0"
            Padding="20,12,20,12"
            BorderThickness="0,0,0,1"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            Background="{ThemeResource SystemChromeLowColor}"
            x:Name="HeaderPanel">
            <Button
                Content="← Back"
                Click="OnBackClicked"
                Style="{StaticResource TextBlockButtonStyle}"/>
        </Border>

        <!-- Page Title -->
        <Border
            Grid.Row="1"
            Padding="20,12,20,12"
            Background="{ThemeResource SystemChromeLowColor}">
            <TextBlock
                Style="{StaticResource HeaderTextBlockStyle}">
                <Run Text="Order #"/>
                <Run Text="{Binding CurrentOrder.OrderId}"/>
                <Run Text=" Details"/>
            </TextBlock>
        </Border>

        <!-- Export Buttons -->
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            Spacing="10"
            Padding="20,10,20,10"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderThickness="0,0,0,1"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}">
            <Button
                Content="📄 Export to PDF"
                Click="OnExportToPdfClicked"
                Style="{StaticResource AccentButtonStyle}"/>
            <Button
                Content="📋 Export to XPS"
                Click="OnExportToXpsClicked"
                Style="{StaticResource DefaultButtonStyle}"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer
            Grid.Row="3"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="15" Padding="20">
                <!-- Header Info -->
                <StackPanel Spacing="6">
                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold">
                        <Run Text="Order ID: "/>
                        <Run Text="{Binding CurrentOrder.OrderId}"/>
                    </TextBlock>
                    <TextBlock
                        FontSize="13"
                        Foreground="{ThemeResource TextFillColorSecondary}">
                        <Run Text="Status: "/>
                        <Run Text="{Binding CurrentOrder.Status}"/>
                    </TextBlock>
                    <TextBlock
                        FontSize="13"
                        Foreground="{ThemeResource TextFillColorSecondary}">
                        <Run Text="Created: "/>
                        <Run Text="{Binding CurrentOrder.CreatedTime}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Promotion Section -->
                <Border
                    Padding="15"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource SystemAccentColor}"
                    CornerRadius="6"
                    Background="{ThemeResource AccentFillColorDisabledBrush}"
                    Visibility="{Binding AppliedPromotion, Converter={StaticResource ObjectToVisibilityConverter}}"
                    Margin="0,10,0,0">
                    <StackPanel Spacing="8">
                        <TextBlock
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource SystemAccentColor}"
                            Text="Promotion Applied"/>
                        <StackPanel Spacing="4">
                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold">
                                <Run Text="Code: "/>
                                <Run Text="{Binding AppliedPromotion.Code}" Foreground="{ThemeResource SystemAccentColor}"/>
                            </TextBlock>
                            <TextBlock
                                FontSize="13"
                                Foreground="{ThemeResource TextFillColorSecondary}">
                                <Run Text="{Binding AppliedPromotion.Description}"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,5,0,0">
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondary}">
                                    <Run Text="Type: "/>
                                    <Run Text="{Binding AppliedPromotion.DiscountType}" FontWeight="SemiBold"/>
                                </TextBlock>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondary}">
                                    <Run Text="Value: "/>
                                    <Run Text="{Binding AppliedPromotion.DiscountValue}"/>
                                    <Run Text="{Binding AppliedPromotion.DiscountType, Converter={StaticResource DiscountTypeToUnitConverter}}"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,5,0,0">
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorTertiary}">
                                    <Run Text="Valid from: "/>
                                    <Run Text="{Binding AppliedPromotion.StartAt, Converter={StaticResource DateTimeToStringConverter}}"/>
                                </TextBlock>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorTertiary}">
                                    <Run Text="Valid until: "/>
                                    <Run Text="{Binding AppliedPromotion.EndAt, Converter={StaticResource DateTimeToStringConverter}}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Items Label -->
                <TextBlock
                    FontSize="13"
                    FontWeight="SemiBold"
                    Text="Items:"/>

                <!-- Items List -->
                <ItemsControl ItemsSource="{Binding OrderItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="12"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                CornerRadius="4"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                Margin="0,0,0,10">
                                <StackPanel Spacing="5">
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold">
                                        <Run Text="• "/>
                                        <Run Text="{Binding Product.Name}"/>
                                    </TextBlock>
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{ThemeResource TextFillColorSecondary}">
                                        <Run Text="SKU: "/>
                                        <Run Text="{Binding Product.Sku}"/>
                                    </TextBlock>
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{ThemeResource TextFillColorSecondary}">
                                        <Run Text="Quantity: "/>
                                        <Run Text="{Binding Quantity}"/>
                                    </TextBlock>
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}">
                                        <Run Text="Total: "/>
                                        <Run Text="{Binding TotalPrice, Converter={StaticResource PriceConverter}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty Items Message -->
                <TextBlock
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorDisabled}"
                    Text="No items in this order."
                    Visibility="{Binding OrderItems.Count, Converter={StaticResource CollectionEmptyVisibilityConverter}}"/>

                <!-- Total Price Footer -->
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="12"
                    Margin="0,20,0,0">
                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Text="Total Price:"/>
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        Text="{Binding CurrentOrder.FinalPrice, Converter={StaticResource PriceConverter}}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
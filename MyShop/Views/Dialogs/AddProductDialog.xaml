<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MyShop.Views.Dialogs.AddProductDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Add New Product"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="OnPrimaryButtonClick">

    <ScrollViewer MaxHeight="600" Padding="0,0,16,0">
        <StackPanel Spacing="12" MinWidth="450" Margin="0,0,8,0">
            <!-- Basic Info -->
            <TextBlock Text="Basic Information" Style="{StaticResource SubtitleTextBlockStyle}"/>
            
            <TextBox x:Name="SkuTextBox"
                     Header="SKU *"
                     PlaceholderText="e.g. PROD-001"
                     MaxLength="50"/>
            
            <TextBox x:Name="NameTextBox"
                     Header="Product Name *"
                     PlaceholderText="Enter product name..."
                     MaxLength="200"/>

            <ComboBox x:Name="CategoryComboBox"
                      Header="Category *"
                      PlaceholderText="Select a category"
                      HorizontalAlignment="Stretch"
                      DisplayMemberPath="Name"/>

            <!-- Pricing & Stock -->
            <TextBlock Text="Pricing &amp; Stock" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,12,0,0"/>
            
            <NumberBox x:Name="ImportPriceBox"
                       Header="Import Price (VNÄ) *"
                       PlaceholderText="0"
                       Minimum="0"
                       SpinButtonPlacementMode="Compact"/>
            
            <NumberBox x:Name="CountBox"
                       Header="Stock Quantity *"
                       PlaceholderText="0"
                       Minimum="0"
                       SpinButtonPlacementMode="Compact"/>

            <!-- Description -->
            <TextBox x:Name="DescriptionTextBox"
                     Header="Description (Optional)"
                     PlaceholderText="Enter product description..."
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="80"
                     MaxLength="1000"/>

            <!-- Images -->
            <TextBlock Text="Product Images (Minimum 3 required)" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,12,0,0"/>
            
            <StackPanel x:Name="ImagesPanel" Spacing="8">
                <!-- Images will be added dynamically -->
            </StackPanel>

            <Button x:Name="AddImageButton" 
                    Content="+ Add Image URL" 
                    Click="OnAddImageClick"
                    HorizontalAlignment="Left"/>

            <InfoBar x:Name="ErrorInfoBar"
                     IsOpen="False"
                     Severity="Error"
                     Title="Validation Error"/>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
